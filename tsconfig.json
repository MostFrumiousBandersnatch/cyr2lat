{
  "compilerOptions": {
    "module": "ES6",
    "target": "es2015",
    "lib": ["ESNext"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["./index.ts"]
}
